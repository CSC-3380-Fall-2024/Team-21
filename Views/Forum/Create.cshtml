@model ForumViewModel

<h2>Create a New Forum Post</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="Title" required />
    </div>
    <div>
        <label for="content">Content</label>
        <textarea id="content" name="Content" required></textarea>
    </div>
    <div>
        <label for="postType">Post Type</label>
        <select id="postType" name="PostType" required>
            @foreach (var postType in Model.PostTypes)
            {
                <option value="@postType">@postType</option>
            }
        </select>
    </div>
    <div>
        <label for="serviceCategory">Category</label>
        <select id="serviceCategory" name="ServiceType" required>
            @foreach (var category in Model.ServiceCategories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
    <button type="submit">Create Post</button>
</form>

<!-- Link to go back to the index page -->
<a href="@Url.Action("Index")">Back to Forum</a>
