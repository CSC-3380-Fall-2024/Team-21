@model Tiger_Tasks.Models.ProfileModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        /* Overall Header Styling */
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 1440px;
            height: 112px;
            padding: 0 24px;
            margin-top: 25px;
            background-color: #f8f9fa;
        }

        .website-title {
            font-size: 24px;
            font-weight: bold;
            color: #333333;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            margin-left: 20px;
        }

        .nav-links a,
        .profile-link {
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
        }

        .image-container {
            display: flex;
            justify-content: flex-start;
            margin-top: 20px;
            padding-left: 24px;
            position: absolute;
            top: 2730px;
        }

        .profile-image {
            width: 472px;
            height: 395px;
            opacity: 0.8;
        }

        .user-info {
            width: 859px;
            height: auto;
            position: absolute;
            top: 220px;
            left: 546px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .name-username .name,
        .name-username .username {
            font-family: 'Protest Riot', sans-serif;
            font-weight: 400;
            letter-spacing: -2%;
        }

        .name {
            font-size: 40px;
            line-height: 48px;
            margin: 0;
        }

        .username {
            font-size: 40px;
            line-height: 48px;
            color: #555;
            margin: 0;
        }

        .bio-label {
            font-family: 'Protest Riot', sans-serif;
            font-weight: 400;
            font-size: 32px;
            line-height: 38.4px;
            letter-spacing: -2%;
            color: #333;
            margin-top: 10px;
        }

        .bio-textbox {
            width: 812px;
            height: 150px;
            padding: 16px;
            margin-bottom: 16px;
            resize: none;
            box-sizing: border-box;
            font-size: 16px;
        }

        .services-container {
            position: relative;
            display: flex;
            gap: 48px;
            top: 664px;
        }

        .services-section {
            width: 606px;
            height: 1139px;
            opacity: 0.8;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 10px;
            box-sizing: border-box;
        }

        .services-section:first-child {
            left: 66px;
        }

        .services-section:last-child {
            left: 720px;
        }

        .section-title {
            font-size: 24px;
            color: #333;
            margin-bottom: 8px;
        }

        .services-textbox {
            width: 100%;
            height: 100%;
            padding: 10px;
            font-size: 16px;
            box-sizing: border-box;
            resize: none;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="website-title">Tiger Tasks</h1>
        <div class="nav-links">
            <a href="/Home">Home</a>
            <a href="/Privacy">Privacy</a>
            <a href="/Forum">Forum</a>
        </div>
        <a href="/Profile" class="profile-link">Profile</a>
    </div>

    <div class="image-container">
        <img src="images/TigerTaskImage.jpg" alt="Profile Image" class="profile-image">
    </div>

    <div class="user-info">
        <div class="name-username">
            <p class="name">@Model.FirstName @Model.LastName</p>
            <p class="username">@Model.UserName</p>
        </div>
        
        <p class="bio-label">Bio</p>
        
        <!-- Bio Form for Editing and Saving -->
        <form asp-action="UpdateBio" asp-controller="Profile" method="post">
            <textarea name="Bio" class="bio-textbox" maxlength="500" placeholder="Enter your bio here...">@Model.Bio</textarea>
            <button type="submit">Save Bio</button>
        </form>
    </div>

    <div class="services-container">
        <div class="services-section">
            <h3 class="section-title">Services Needed</h3>
            <form asp-action="AddService" asp-controller="Service" method="post">
                <textarea name="ServiceName" placeholder="Enter a service you need..." required></textarea>
                <input type="hidden" name="IsOffered" value="false" />
                <button type="submit">Add Service</button>
            </form>
            <ul>
                @foreach (var service in Model.NeededServices)
                {
                    <li>
                        @service.ServiceName
                        <form asp-action="DeleteService" asp-controller="Service" method="post" style="display:inline;">
                            <input type="hidden" name="ServiceId" value="@service.ServiceId" />
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                }
            </ul>
        </div>

        <div class="services-section">
            <h3 class="section-title">Services Offered</h3>
            <form asp-action="AddService" asp-controller="Service" method="post">
                <textarea name="ServiceName" placeholder="Enter a service you offer..." required></textarea>
                <input type="hidden" name="IsOffered" value="true" />
                <button type="submit">Add Service</button>
            </form>
            <ul>
                @foreach (var service in Model.ProvidedServices)
                {
                    <li>
                        @service.ServiceName
                        <form asp-action="DeleteService" asp-controller="Service" method="post" style="display:inline;">
                            <input type="hidden" name="ServiceId" value="@service.ServiceId" />
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>
</html>
