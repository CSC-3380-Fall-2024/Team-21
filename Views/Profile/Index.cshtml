@model Tiger_Tasks.Models.ApplicationUser

@{
    ViewData["Title"] = "User Profile";
}

<h3 class="text-center" style="color: #6A4C9C;">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card" style="background-color: #D7BDF8;">
            <div class="card-header" style="background-color: #6A4C9C; color: white;">
                <h4 class="text-center">Profile Details</h4>
            </div>
            <div class="card-body" style="background-color: #F9F9F9;">
                <dl class="row">
                    <!-- Username -->
                    <dt class="col-sm-4" style="font-weight: bold; color: #6A4C9C;">Username</dt>
                    <dd class="col-sm-8" style="color: #333;">@Model.UserName</dd>

                    <!-- Phone Number -->
                    <dt class="col-sm-4" style="font-weight: bold; color: #6A4C9C;">Phone Number</dt>
                    <dd class="col-sm-8" style="color: #333;">@Model.PhoneNumber</dd>

                    <!-- Bio -->
                    <dt class="col-sm-4" style="font-weight: bold; color: #6A4C9C;">Bio</dt>
                    <dd class="col-sm-8" style="color: #333;">@Model.Bio</dd>

                    <!-- Services Needed -->
                    <dt class="col-sm-4" style="font-weight: bold; color: #6A4C9C;">Services Needed</dt>
                    <dd class="col-sm-8" style="color: #333;">@Model.ServicesNeeded</dd>

                    <!-- Services Provided -->
                    <dt class="col-sm-4" style="font-weight: bold; color: #6A4C9C;">Services Provided</dt>
                    <dd class="col-sm-8" style="color: #333;">@Model.ServicesProvided</dd>
                </dl>
            </div>
           
        </div>
    </div>
</div>
