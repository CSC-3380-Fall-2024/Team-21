@model Tiger_Tasks.Models.ForumPost

@{
    ViewData["Title"] = "Create a new post";
}

<h1>Create</h1>

<h4 style="color: gold;">ForumPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label" style="color: gold;"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label" style="color: gold;"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostType" class="control-label" style="color: gold;"></label>
                <select asp-for="PostType" asp-items="Html.GetEnumSelectList<PostType>()" class="form-control">
                    <option value="">-- Select Post Type --</option>
                </select>
                <span asp-validation-for="PostType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" style="background-color: #D7BDF8; color: black;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
