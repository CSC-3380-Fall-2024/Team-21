@model IEnumerable<Tiger_Tasks.Models.ForumPost>

@{
    ViewData["Title"] = "Forum Posts";
}

<h1>Forum Posts</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Post</a>
</p>

<!-- Filter Section -->
<form method="get" class="mb-3">
    <div class="form-group row">
        <label for="filter" class="col-sm-2 col-form-label">Filter by Post Type:</label>
        <div class="col-sm-4">
            <select name="filter" id="filter" class="form-control">
                <option value="">-- All Posts --</option>
                <option value="HelpWanted">Help Wanted</option>
                <option value="HelpNeeded">Help Needed</option>
            </select>
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-secondary">Filter</button>
        </div>
    </div>
</form>

<!-- Posts Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Title)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
            <th>Post Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())

        {

            foreach (var item in Model)

            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@item.PostType</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        }

        else

        {
            <tr>
                <td colspan="4" class="text-center">No posts available.</td>
            </tr>
        }
    </tbody>
</table>
