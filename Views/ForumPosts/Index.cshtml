@model IEnumerable<Tiger_Tasks.Models.ForumPost>

@{
    ViewData["Title"] = "Forum Posts";
}

<h1>Forum Posts</h1>

<p>
    <a class="btn btn-default" asp-action="Create" style="background-color: #D7BDF8; color: black;">Create New Post</a>
</p>

<!-- Filter Section -->
<form method="get" class="mb-3">
    <div class="form-group row">
        <!-- Post Type Filter -->
        <label for="postTypeFilter" class="col-sm-2 col-form-label" style="color: gold">Filter By Post Type:</label>
        <div class="col-sm-4">
            <select name="postTypeFilter" id="postTypeFilter" class="form-control">
                <option value="">-- All Posts --</option>
                <option value="HelpWanted">Help Wanted</option>
                <option value="HelpOffered">Help Offered</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <!-- Service Type Filter -->
        <label for="serviceTypeFilter" class="col-sm-2 col-form-label" style="color: gold">Filter By Service Type:</label>
        <div class="col-sm-4">
            <select name="serviceTypeFilter" id="serviceTypeFilter" class="form-control">
                <option value="">-- All Posts --</option>
                <option value="ITHelp">IT Help</option>
                <option value="ManualLabor">Manual Labor</option>
                <option value="Tutoring">Tutoring</option>
                <option value="StudyGroup">Study Group</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <!-- Cost Type Filter -->
        <label for="CostFilter" class="col-sm-2 col-form-label" style="color: gold">Filter By Cost:</label>
        <div class="col-sm-4">
            <select name="maxCost" id="CostFilter" class="form-control">
                <option value="">-- No Maximum --</option>
                <option value="10"> 10</option>
                <option value="15"> 15</option>
                <option value="20"> 20</option>
                <option value="25"> 25</option>
                <option value="30"> 30</option>
                
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-default" style="background-color: #D7BDF8; color: black;">Filter</button>
        </div>
    </div>
</form>

<!-- Posts Table --> 
@if (Model.Any())
{
    @foreach (var post in Model)
    {
        <div class="card mb-4">
            <!-- Header with Title and Creator Profile -->
            <div class="card-header" style="background-color: #D7BDF8;">
                <h3 style="margin: 0; color: black; text-align: left;">
                    @post.Title
                </h3>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-default" style="background-color: gold; color: black; text-align:right;"
                       href="@Url.Action("Index", "Profile", new { userId = post.UserId })" class="btn btn-info">View Creator's Profile</a>
                   
                </div>
            </div>

            <!-- Description -->
            <div class="card-body" style="background-color: #F9F9F9;">
                <p style="margin: 0; color: black; ">@post.Description</p>
            </div>

            <!-- Footer with Service Type and Post Type -->
            <div class="card-footer text-muted" style="background-color: #EEE;">
                <span style="font-weight: bold;">Service Type:</span> @post.ServiceType
                <span class="mx-3">|</span>
                <span style="font-weight: bold;">Post Type:</span> @post.PostType
                <span class="mx-3">|</span>
                <span style="font-weight: bold;">Cost per Hour:</span> @post.Cost

              
            </div>
          
        </div>
    }
}
else
{
    <p class="text-center" style="color: gray;">No posts available.</p>
}